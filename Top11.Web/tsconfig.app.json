{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [ "env.d.ts", "ClientApp/**/*", "ClientApp/**/*.vue" ],
  "exclude": [ "ClientApp/**/__tests__/*" ],
  "compilerOptions": {
    "composite": true,

    "jsx": "preserve",
    "jsxImportSource": "vue",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@/*": [ "./ClientApp/*" ]
    }
  }
}
